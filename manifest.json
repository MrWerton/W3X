{
  "manifest_version": 3,
  "name": "W3X",
  "version": "1.0",
  "description": "A Chrome extension for speed video playback.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "48": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
